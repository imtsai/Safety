<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/nice_blue" >

    <TextView
        	style="@style/GoldStuff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Routes we found"
            android:id="@+id/routeFound"/>
    <ListView
            android:layout_width="match_parent"
        
            android:layout_height="363dp"
            android:id="@+id/routesFound" android:choiceMode="none"
            android:textFilterEnabled="false"  />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
            android:id="@+id/bearWalk"
            style="@style/GoldStuff"
            android:layout_width="118dp"
            android:layout_height="72dp"
            android:layout_gravity="center_vertical"
            android:onClick="callBearWalk"
            android:text="Call BearWalk" />

        <Button
            android:id="@+id/button5"
            style="@style/GoldStuff"
            android:layout_width="128dp"
            android:layout_height="78dp"
            android:text="   Call Uber   " />

        <Button
            android:id="@+id/button6"
            style="@style/GoldStuff"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:text="   Restart     " />

    </LinearLayout>

</LinearLayout>