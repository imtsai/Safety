<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/nice_blue" >
     

    <EditText
        style="@style/WhiteStuff"
        android:id="@+id/signupEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/loginEmailInstruction" 
        android:imeOptions="actionNext" />
        

        <requestFocus />

        <TextView
            style="@style/WhiteStuff"
            android:id="@+id/emailRequirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailRequirement" />

    <EditText
        style="@style/WhiteStuff"
        android:id="@+id/signupPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/loginPasswordInstruction"
        android:inputType="textPassword" 
        android:imeOptions="actionDone" />

    <TextView
        style="@style/WhiteStuff"
        android:id="@+id/disclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disclaimer"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        style="@style/WhiteStuff"
        android:id="@+id/disclaimerCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disclaimerCheckbox" />

       
  	<Button
  	    style="@style/WhiteStuff"
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="registration"
        android:text="@string/Signup" />

  	

</LinearLayout>
